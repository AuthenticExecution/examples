{
    "manager": "manager.yaml",
    "nodes": [
        {
            "type": "native",
            "name": "node_sgx",
            "host": "node-sgx",
            "reactive_port": 5000
        },
        {
            "type": "native",
            "name": "node_trustzone",
            "host": "node-trustzone",
            "reactive_port": 5000
        },
        {
            "type": "native",
            "name": "node_sancus_1",
            "host": "node-sancus-1",
            "reactive_port": 5000
        },
        {
            "type": "native",
            "name": "node_sancus_2",
            "host": "node-sancus-2",
            "reactive_port": 5000
        },
        {
            "type": "native",
            "name": "node_sancus_3",
            "host": "node-sancus-3",
            "reactive_port": 5000
        }
    ],
    "modules" : [
        {
            "type": "native",
            "name": "web",
            "node": "node_sgx"
        },
        {
            "type": "native",
            "name": "gateway",
            "node": "node_trustzone"
        },
        {
            "type": "native",
            "name": "temp_sensor",
            "node": "node_sancus_1"
        },
        {
            "type": "native",
            "name": "thermostat",
            "node": "node_sancus_2"
        },
        {
            "type": "native",
            "name": "light_switch",
            "node": "node_sancus_3"
        }
    ],
    "connections": [
        {
            "name": "init-server",
            "direct": true,
            "to_module": "web",
            "to_handler": "init_server",
            "encryption": "aes"
        },
        {
            "from_module": "web",
            "from_output": "set_desired_temp",
            "to_module": "gateway",
            "to_input": "set_desired_temp",
            "encryption": "aes"
        },
        {
            "from_module": "web",
            "from_output": "enable_heating",
            "to_module": "gateway",
            "to_input": "enable_heating",
            "encryption": "aes"
        },
        {
            "from_module": "gateway",
            "from_output": "send_status",
            "to_module": "web",
            "to_input": "set_status",
            "encryption": "aes"
        },
        {
            "from_module": "gateway",
            "from_output": "set_heating",
            "to_module": "thermostat",
            "to_input": "set_heating",
            "encryption": "spongent"
        },
        {
            "from_module": "thermostat",
            "from_output": "send_heating_state",
            "to_module": "gateway",
            "to_input": "set_heating_state",
            "encryption": "spongent"
        },
        {
            "from_module": "thermostat",
            "from_output": "send_heating_state",
            "to_module": "temp_sensor",
            "to_input": "set_heating_state",
            "encryption": "spongent"
        },
        {
            "from_module": "temp_sensor",
            "from_output": "send_actual_temp",
            "to_module": "gateway",
            "to_input": "set_actual_temp",
            "encryption": "spongent"
        },
        {
            "from_module": "web",
            "from_output": "enable_switch",
            "to_module": "gateway",
            "to_input": "enable_switch",
            "encryption": "aes"
        },
        {
            "from_module": "gateway",
            "from_output": "set_switch",
            "to_module": "light_switch",
            "to_input": "set_switch",
            "encryption": "spongent"
        },
        {
            "from_module": "light_switch",
            "from_output": "send_switch_state",
            "to_module": "gateway",
            "to_input": "set_switch_state",
            "encryption": "spongent"
        }
    ]
}
