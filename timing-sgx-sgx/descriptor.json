{
    "manager": "manager.yaml",
    "nodes": [
        {
            "type": "sgx",
            "name": "node_sgx_1",
            "ip_address": "node-sgx-1",
            "reactive_port": 5000,
            "aesm_host": "aesm-client"
        },
        {
            "type": "sgx",
            "name": "node_sgx_2",
            "ip_address": "node-sgx-2",
            "reactive_port": 5000,
            "aesm_host": "aesm-client"
        },
        {
            "type": "sgx",
            "name": "node_sgx_3",
            "ip_address": "node-sgx-3",
            "reactive_port": 5000,
            "aesm_host": "aesm-client"
        },
        {
            "type": "sgx",
            "name": "node_sgx_4",
            "ip_address": "node-sgx-4",
            "reactive_port": 5000,
            "aesm_host": "aesm-client"
        }
    ],
    "modules" : [
        {
            "type": "sgx",
            "name": "webserver",
            "node": "node_sgx_1",
            "vendor_key": "cred/vendor_key.pem",
            "ra_settings": "cred/settings.json",
            "features": ["measure_time"]
        },
        {
            "type": "sgx",
            "name": "db",
            "node": "node_sgx_1",
            "vendor_key": "cred/vendor_key.pem",
            "ra_settings": "cred/settings.json",
            "features": ["measure_time"]
        },
        {
            "type": "sgx",
            "name": "gateway",
            "node": "node_sgx_2",
            "vendor_key": "cred/vendor_key.pem",
            "ra_settings": "cred/settings.json",
            "features": ["measure_time"]
        },
        {
            "type": "sgx",
            "name": "led_driver",
            "node": "node_sgx_3",
            "vendor_key": "cred/vendor_key.pem",
            "ra_settings": "cred/settings.json",
            "features": ["measure_time"]
        },
        {
            "type": "sgx",
            "name": "button_driver",
            "node": "node_sgx_4",
            "vendor_key": "cred/vendor_key.pem",
            "ra_settings": "cred/settings.json",
            "features": ["measure_time"]
        }
    ],
    "connections": [
      {
          "from_module": "button_driver",
          "from_output": "button_pressed",
          "to_module": "gateway",
          "to_input": "button_pressed",
          "encryption": "spongent"
      },
      {
          "from_module": "gateway",
          "from_output": "toggle_led",
          "to_module": "led_driver",
          "to_input": "toggle_led",
          "encryption": "spongent"
      },
      {
          "from_module": "gateway",
          "from_output": "increment_presses",
          "to_module": "db",
          "to_input": "increment_presses",
          "encryption": "aes"
      },
      {
          "from_module": "webserver",
          "from_request": "get_presses",
          "to_module": "db",
          "to_handler": "get_presses",
          "encryption": "aes"
      },
      {
          "name": "init-server",
          "direct": true,
          "to_module": "webserver",
          "to_handler": "init_server",
          "encryption": "aes"
      },
      {
          "name": "trigger-btn",
          "direct": true,
          "to_module": "button_driver",
          "to_input": "trigger_button_press",
          "encryption": "spongent"
      },
      {
          "name": "get-presses",
          "direct": true,
          "to_module": "db",
          "to_handler": "get_presses",
          "encryption": "aes"
      }
    ]
}
